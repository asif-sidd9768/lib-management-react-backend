<% layout('layouts/boilerplate') %>

<form action="/register" method="POST" class="validated-form" novalidate>
    <div class="row">
        <div class="col-6 offset-3">
            <div class="mb-3">
                <h1 class="mb-5 text-center">Register</h1>
                <label for="username" class="form-label">Username</label>
                <input type="text" id="username" class="form-control" name="username" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <label for="email" class="mt-3 form-label">Email</label>
                <input type="email" id="email" class="form-control" name="email" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <label for="password" class="mt-3 form-label">Password</label>
                <input type="password" id="password" class="form-control"
                    pattern="^(?=.*?[A-Z])(?=.*?[a-z])(?=.*?[0-9])(?=.*?[#?!@$%^&*-]).{8,}$" title="Must contain a letter, digit, and a special character and should be of 8 or more characters" name="password" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <button class="btn btn-success mt-3">Register</button>
            </div>
        </div>
    </div>

</form>